{
  "name": "imbriani-admin",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint . --ext .js,.gs",
    "format": "prettier --write \"**/*.{js,gs,json,html,css}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "security": "npm audit --json",
    "prepare": "husky install",
    "gas:login": "clasp login",
    "gas:push": "clasp push",
    "gas:deploy-auto": "node scripts/gas-deploy.js",
    "proxy:publish": "wrangler deploy"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/node": "^22.7.8",
    "eslint": "^9.14.0",
    "eslint-plugin-security": "^1.7.1",
    "globals": "^15.9.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rollup": "^4.12.0",
    "vitest": "^2.1.3",
    "wrangler": "^4.48.0"
  },
  "lint-staged": {
    "**/*.{js,gs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,css,html}": [
      "prettier --write"
    ]
  }
}
